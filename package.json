{
  "name": "@novaCode/resource",
  "version": "0.0.4",
  "type": "commonjs",
  "description": "Librer√≠a compartida con modelos y Dtos para microservicios (Prisma + TS)",
  "author": "Gabriel Campoverde",
  "private": false,
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "generate": "prisma generate",
    "copy:prisma": "copyfiles -u 1 \"generated/prisma/**/*\" dist/generated/prisma",
    "copy:src": "copyfiles -u 1 \"src/prisma.ts\" dist/",
    "build": "tsc -p tsconfig.json && yarn copy:src && yarn copy:prisma",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.8",
    "@prisma/client": "^6.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/mapped-types": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "prisma": "^6.16.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
