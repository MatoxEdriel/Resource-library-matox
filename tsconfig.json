{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./", // ✅ compila directamente en la raíz del paquete
    "rootDir": "./", // ✅ asegura que index.ts también se compile
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts", // ✅ incluye tu punto de entrada
    "prisma/**/*.ts", // ✅ incluye tus servicios y cliente
    "dto/**/*.ts",
    "filters/**/*.ts",
    "helpers/**/*.ts",
    "interfaces/**/*.ts",
    "libraries/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}